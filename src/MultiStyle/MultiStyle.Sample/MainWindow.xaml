<Window x:Class="MultiStyle.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MultiStyle Sample App" Height="350" Width="525">
    <Window.Resources>
        <Style x:Key="BigText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock Text="MultiStyle Sample App" Style="{StaticResource BigText}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
